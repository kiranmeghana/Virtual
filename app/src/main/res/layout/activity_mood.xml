<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5FA"
    android:padding="20dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- Mood Emoji -->
        <TextView
            android:id="@+id/currentMoodEmoji"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="ðŸ˜Š"
            android:textSize="60sp"
            android:gravity="center"
            android:background="@drawable/mood_circle_bg"
            android:textColor="#000000"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="16dp" />

        <!-- Motivational Message -->
        <TextView
            android:id="@+id/moodMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You can do a good job!"
            android:textSize="18sp"
            android:textColor="#333333"
            android:textAlignment="center"
            android:layout_marginBottom="24dp" />

        <!-- Mood Bars -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Mood Item -->
            <include layout="@layout/mood_item_layout" />

            <!-- Repeat for all moods -->
        </LinearLayout>

    </LinearLayout>
</ScrollView>










